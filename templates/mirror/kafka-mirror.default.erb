# Memory sizes, and logging configuration
<% if @heap_opts -%>
KAFKA_HEAP_OPTS=<%= @heap_opts %>
<% else -%>
#KAFKA_HEAP_OPTS="-Xmx1G -Xms1G"
<% end -%>
